{
    "name": "extcode/cart-events",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3 - Event Extension",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0-or-later"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "cart",
        "events"
    ],
    "authors": [
        {
            "name": "Daniel Lorenz",
            "email": "ext.cart@extco.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/extcode/cart_events/issues"
    },
    "require": {
        "php": ">=7.0.0 <7.3",
        "typo3/cms-core": "^8.7",
        "typo3/cms-extbase": "^8.7",
        "typo3/cms-fluid": "^8.7",
        "extcode/cart": "^5.0"
    },
    "require-dev": {
        "nimut/testing-framework": "^2.0 || ^3.0 || ^4.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "helmich/typo3-typoscript-lint": "^1.4",
        "phpro/grumphp": "*",
        "phpmd/phpmd": "*"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\CartEvents\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\CartEvents\\Tests\\": "Tests"
        }
    },
    "replace": {
        "cart_events": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cart_events ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cart_events"
        ]
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "cart_events",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "app-dir": ".Build",
            "web-dir": ".Build/public"
        }
    }
}
