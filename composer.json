{
    "name": "extcode/cart-events",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3 - Event Extension",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0-or-later"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "cart",
        "events",
        "events"
    ],
    "authors": [
        {
            "name": "Daniel Lorenz",
            "email": "ext.cart@extco.de",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "ssh://git@code.extco.de:22722/cart/cart.git"							        }
    ],
    "support": {
        "issues": "https://github.com/extcode/cart_events/issues"
    },
    "require": {
        "php": ">=7.0.0",
        "typo3/cms": "^8.7",
        "extcode/cart": "dev-5.x.pre"
    },
    "require-dev": {
        "nimut/testing-framework": "^1.0",
        "phpunit/phpunit": "~4.8.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\CartEvents\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\CartEvents\\Tests\\": "Tests"
        }
    },
    "replace": {
        "cart_events": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cart_events ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cart_events"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
